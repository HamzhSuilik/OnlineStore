<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="market.hz">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".seller.Add_new_image_group"></activity>
        <activity android:name=".seller.Delete_product_image" />
        <activity android:name=".seller.Update_product_add_image" />
        <activity android:name=".seller.Update_product_image_view" />
        <activity android:name=".seller.Update_product_data" />
        <activity android:name=".seller.Add_new_product_image" />
        <activity android:name=".seller.Add_new_product_data" />
        <activity android:name=".seller.Rank" />
        <activity android:name=".seller.Update_group" />
        <activity android:name=".seller.Add_new_group" />
        <activity android:name=".details" />
        <activity android:name=".details_offers" />
        <activity android:name=".splash" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>