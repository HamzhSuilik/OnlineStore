<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.Add_new_product_data"
    android:padding="5dp"
    android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إضافة منتج جديد :"
                android:textColor="@color/black"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/title1_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="العنوان 1"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/title2_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="العنوان 2"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/description_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="وصف المنتج"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/size_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="المقاسات :"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <EditText
                    android:id="@+id/size1_new_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/size2_new_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/size3_new_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:text=""

                    />

                <EditText
                    android:id="@+id/size4_new_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/size5_new_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="عدد الألوان :"
                android:textColor="@color/black"
                android:textSize="20sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                >

                <TextView
                    android:id="@+id/color1_new_product"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:background="@drawable/select_image_count"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:onClick="color_count_1"

                    />

                <TextView
                    android:id="@+id/color2_new_product"
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:onClick="color_count_2"
                    />

                <TextView
                    android:id="@+id/color3_new_product"
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:onClick="color_count_3"
                    />

                <TextView
                    android:id="@+id/color4_new_product"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:onClick="color_count_4"
                    />

                <TextView
                    android:id="@+id/color5_new_product"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:background="@drawable/edit_bg"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:onClick="color_count_5"
                    />

            </LinearLayout>


            <EditText
                android:id="@+id/price_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="السعر"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/old_price_new_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="السعر القديم"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_image"
                />

            <Button
                android:id="@+id/select_image_bt"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="حدد الصورة الرئيسية للمنتج"
                android:textSize="23sp"
                android:onClick="select_goo"
                />

            <Button
                android:id="@+id/next_button"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="التالي"
                android:textSize="30sp"
                android:onClick="next_goo"
                android:visibility="gone"
                />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>