<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/bt1_tab2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="إضافة مجموعة جديدة"
        android:layout_margin="5dp"
        android:background="@drawable/add_new_button_bg"
        android:onClick="goo_new_group"
        />


    <TextView
        android:id="@+id/group_number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="1"
        android:visibility="gone"

        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/bt2_tab2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="إضافة منتج جديد"
        android:layout_margin="5dp"
        android:background="@drawable/add_new_button_bg"
        android:visibility="gone"
        android:onClick="goo_new_product"
        />

    <ProgressBar
        android:id="@+id/progressBar_tab_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:indeterminate="true"
        android:visibility="gone"
        />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:background="@color/color_grid"
            android:padding="7dp"
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:numColumns="auto_fit"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"
            />

        <GridView
            android:background="@color/color_grid"
            android:id="@+id/grid2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:numColumns="auto_fit"
            android:visibility="gone"
            android:verticalSpacing="8dp"
            android:horizontalSpacing="8dp"

            android:padding="7dp"/>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</LinearLayout>